textarea{
	resize: none;
}

.live-d-flex {
	display: -webkit-box!important;
	display: -ms-flexbox!important;
	display: flex!important;
}
.live-flex-row-reverse {
	-webkit-box-orient: horizontal!important;
	-webkit-box-direction: reverse!important;
	-ms-flex-direction: row-reverse!important;
	flex-direction: row-reverse!important;
}

.star-rating input {
	display: none;
}
.star-rating label {
	cursor: pointer;
	margin-bottom: 0;
}
.star-rating > label:before { 
	content: "\f005";
	font-size: 1.3rem;
	font-weight: normal;
	font-family: FontAwesome;
	display: inline-block;
}
.star-rating > label {
  color: #e2e2e2;
}
.star-rating > input:hover ~ label {
	color: #ffeca8 ;
}
.star-rating > input:checked ~ label {
	color: #ffca08 ;
}

.content-live {
	/* background-color: #fbfbfb; */
	/* border: 1px solid #dedede; */
	/* border-radius: 8px; */
	margin-bottom: 2rem;
	padding: 1rem;
	/* -webkit-box-shadow: 4px 4px 11px 0px rgba(179, 179, 179, 0.5); */
	/* box-shadow: 4px 4px 11px 0px rgba(179, 179, 179, 0.5); */
}

.content-live.info .form-group {
	margin: 0 1rem 1rem 0;
}

.content-live-galeria {
	height: 30px;
	margin-bottom: 1rem;
}

.content-live-galeria:empty:before {
	color: #b1b1b1;
	content: '* No se han adjuntado imagenes';
}

.content-live-eval:hover .lbl-live-eval{
	color: #0000ff;
}

.h-live-title{
	margin-bottom: 3rem;
}

.img-live .closes {
	position: absolute;
	top: 5px;
	right: 8px;
	z-index: 100;
	background-color: transparent;
	padding: 4px 3px;

	color: #000;
	font-weight: bold;
	cursor: pointer;

	text-align: center;
	font-size: 22px;
	line-height: 10px;
	border-radius: 50%;

	opacity: 0.3;
}
.img-live .closes:hover {
	opacity: 1;
}

.btn-live-calificar {
	margin-left: 0.5em;
}

.btn-live-calificar label {
	color: #b5b5b5 !important;
}

.lbl-live-calificar-ok.active {
	background: #71ffb0;
	color: #000 !important;
}

.lbl-live-calificar-error.active {
	background: #ff4e4e;
	color: #fff !important;
}

.input-group-live {
	margin: 0;
	padding-left: 10px;
}

.input-group-live .input-group-addon {
	padding: 1px 4px;
}

.input-group-live .txt-live-comentario {
	padding: 4px;
	line-height: 16px;
}

.input-group-live .btn:not(.dropdown-toggle) {
	margin: 0;
	padding: 0px 3px;
	line-height: 15px;
}